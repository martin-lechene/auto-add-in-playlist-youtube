{
  "manifest_version": 3,
  "name": "YouTube Quick Save",
  "short_name": "YTSave",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "https://github.com/martin-lechene",
  "version": "1.0",
  "description": "Ajoute des boutons rapides pour enregistrer une vidéo dans des playlists spécifiques.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
